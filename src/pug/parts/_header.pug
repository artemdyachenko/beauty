    .header-main
        .grid
            .header-main__box
                a(href="#").header-logo
                    img(src="img/logo.svg" alt="Site logo")
                nav.header-nav
                    ul.header-nav__list
                        li.header-nav__item
                            a(href="#").header-nav__link Главная
                        li.header-nav__item
                            a(href="#").header-nav__link Услуги
                        li.header-nav__item
                            a(href="#").header-nav__link Цены
                        li.header-nav__item
                            a(href="#").header-nav__link Блог
